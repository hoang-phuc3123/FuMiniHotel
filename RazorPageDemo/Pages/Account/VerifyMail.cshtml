@page
@model RazorPage.Pages.Account.VerifyMailModel
@{
    var email = Model.Verify.Email;
}
<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Verify.Email"></label>
        </div>
        <div class="col-5">
            <input asp-for="Verify.Email" class="form-control" type="text" value="@email" readonly />
        </div>
        <div class="col-5">
            <span asp-validation-for="Verify.Email" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Verify.VerifyCode"></label>
        </div>
        <div class="col-5">
            <input asp-for="Verify.VerifyCode" class="form-control" type="text" />
        </div>
        <div class="col-5">
            <span asp-validation-for="Verify.VerifyCode" class="text-danger"></span>
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Verify</button>
    <!-- Button trigger modal -->
</form>