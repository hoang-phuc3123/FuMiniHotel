@page
@model RazorPage.Pages.BookingModel
@{
    ViewData["Title"] = "Booking page";
}

<form method="post">
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Booking Details
            </div>
            <div class="card-body">
                <!-- Validation Summary -->
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                @if (ViewData.ModelState.Count > 0)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var item in ViewData.ModelState.Values)
                            {
                                @foreach (var error in item.Errors)
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            }
                        </ul>
                    </div>
                }
                <div class="form-group row">
                    <label for="dtpStartDate" class="col-sm-2 col-form-label">Start Date:</label>
                    <div class="col-sm-10">
                        <input asp-for="dtpStartDate" type="date" class="form-control" id="dtpStartDate" name="dtpStartDate" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="dtpEndDate" class="col-sm-2 col-form-label">End Date:</label>
                    <div class="col-sm-10">
                        <input asp-for="dtpEndDate" type="date" class="form-control" id="dtpEndDate" name="dtpEndDate" />
                    </div>
                </div>

                <!-- Table to display room information -->
                <table class="table table-striped table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>Room Number</th>
                            <th>Description</th>
                            <th>Max Capacity</th>
                            <th>Price Per Day</th>
                            <th>Room Type</th>
                            <th>Select Room</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Rooms != null && Model.Rooms.Count > 0)
                        {
                            @foreach (var room in Model.Rooms)
                            {
                                <tr>
                                    <td>@room.RoomNumber</td>
                                    <td>@room.RoomDetailDescription</td>
                                    <td>@room.RoomMaxCapacity</td>
                                    <td>@room.RoomPricePerDay</td>
                                    <td>@room.RoomTypeName</td>
                                    <td>
                                        <input type="checkbox" id="roomCheckbox_@room.RoomNumber" name="SelectedRooms" value="@room.RoomNumber" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Button Section -->
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Book</button>
            <button type="button" class="btn btn-secondary" onclick="cancelBooking()">Cancel</button>
        </div>
    </div>
</form>

@section Scripts
    {
    <script>
        function cancelBooking() {
            window.location.href = "/Index";
        }
    </script>
}
