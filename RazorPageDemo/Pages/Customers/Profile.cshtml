@page
@model RazorPage.Pages.AccountModel
@{
    ViewData["Title"] = "Update Profile";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container border p-4 rounded-3 w-25 mx-auto">
    <form method="post" class="d-flex flex-column gap-4">

        <p class="display-4">Profile</p>

        <input type="hidden" asp-for="Customer.CustomerId" />

        <div class="form-floating">
            <input asp-for="Customer.FullName" type="text" class="form-control" id="floatingInput" placeholder="" />
            <label asp-for="Customer.FullName" for="floatingInput"></label>
            <span asp-validation-for="Customer.FullName" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Customer.Phone" type="tel" class="form-control" id="floatingInput" placeholder="" />
            <label asp-for="Customer.Phone" for="floatingInput"></label>
            <span asp-validation-for="Customer.Phone" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Customer.BirthDay" type="date" class="form-control" id="floatingInput" placeholder="" />
            <label asp-for="Customer.BirthDay" for="floatingInput"></label>
            <span asp-validation-for="Customer.BirthDay" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Customer.Email" type="text" class="form-control" id="floatingInput" placeholder="" />
            <label asp-for="Customer.Email" for="floatingInput"></label>
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Save</button>

        <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>
    </form>
</div>
