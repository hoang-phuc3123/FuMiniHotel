@page
@model IndexModel
@{
    ViewData["Title"] = "Login page";
}
<h2>Login</h2>

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="credential.Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="credential.Email" class="form-control" type="text" />
            </div>
            <div class="col-5">
                <span asp-validation-for="credential.Email" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="credential.Password"></label>
            </div>
            <div class="col-5">
                <input asp-for="credential.Password" class="form-control" type="password" />
            </div>
            <div class="col-5">
                <span asp-validation-for="credential.Password" class="text-danger"></span>
            </div>

        </div>
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/SignUp">Sign Up</a>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

</div>

